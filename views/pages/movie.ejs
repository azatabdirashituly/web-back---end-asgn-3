<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Search Website</title>    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/movie.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark p-3">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class=" collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ms-auto ">
              <li class="nav-item">
                <a class="nav-link mx-2" href="/main">Image generator</a>
              </li>
              <li class="nav-item">
                <a class="nav-link mx-2" style="color: #e50914;" href="/movie">Search for a Movie</a>
              </li>
              <li class="nav-item">
                <a class="nav-link mx-2"href="/weather">Weather App</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link mx-2 dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Searched History
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  <li><a class="dropdown-item" href="/historyImage">Images</a></li>
                  <li><a class="dropdown-item" href="/historyMovie">Movies</a></li>
                  <li><a class="dropdown-item" href="/historyCity">Cities</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="wrapper">

        <div class="search-container d-flex justify-content-center">
            <form action="/movie" method="post" class="search-element d-flex align-items-center">
                <input name="movie" type="text" placeholder="Search Movie Title ..." class="form-control mr-2">
                <button type="submit" class="btn btn-outline-light">Search</button>
            </form>
        </div>
    
        <div class="movie-container">
        <% if (movieData && movieData.Search) { %>
            <% movieData.Search.forEach(function(movie) { %>
                <div class="movie">
                    <h3><%= movie.Title %></h3>
                    <p>Year: <%= movie.Year %></p>
                    <img src="<%= movie.Poster %>" alt="">
                </div>
            <% }); %>
        <% } else { %>
            <p></p>
        <% } %>
        </div>    
    </div> 
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>