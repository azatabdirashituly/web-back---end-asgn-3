<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <link rel="stylesheet" href="/styles/adminPanel.css">
</head>
<body>
    <h1>This is Admin Page</h1>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Phone</th>
                <th>Registration Date</th>
                <th>User ID</th>
                <th>Admin Status</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.phone %></td>
                    <td>
                        <%= new Date(user.registrationDate).toLocaleDateString() %>
                        <%= new Date(user.registrationDate).toLocaleTimeString([], {hour: '2-digit', minute: '2-digit'}) %>
                    </td>
                    <td>
                        <%= user._id %>
                    </td>
                    <td class="admin-status">
                        <% if (user.isAdmin) { %>
                            <span class="admin-yes">Admin</span>
                        <% } else { %>
                            <span class="admin-no">User</span>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>    
    <form action="/addUser" method="post" class="add-user-form">
        <h2>Add New User</h2>
        <input name="username" type="text" placeholder="Username" required>
        <input name="phone" type="text" placeholder="Phone number" required>
        <input name="password" type="password" placeholder="Password" required>
        <button type="submit">Add User</button>
    </form>

    <form action="/deleteUser" method="post" class="add-user-form">
        <h2>Delete user by username</h2>
        <input name="username" type="text" placeholder="Username" required>
        <button type="submit">Delete User</button>
    </form>

</body>
</html>
